<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />

        <Button
            android:id="@+id/test_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_request_button" />

        <Button
            android:id="@+id/test_post_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_post_request_button" />

        <Button
            android:id="@+id/nav_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nav options" />

    </LinearLayout>

</layout>
